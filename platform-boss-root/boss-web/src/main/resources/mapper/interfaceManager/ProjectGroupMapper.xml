<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.boss.platform.dao.interfaceManager.ProjectGroupMapper">
    <resultMap id="BaseResultMap" type="cn.boss.platform.bean.interfaceManager.ProjectGroupBean">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="project_id" jdbcType="INTEGER" property="projectId"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="group_name" jdbcType="VARCHAR" property="groupName"/>
        <result column="group_desc" jdbcType="VARCHAR" property="groupDesc"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <!--添加项目分组 -->
    <insert id="addProjectGoup" parameterType="cn.boss.platform.bean.interfaceManager.ProjectGroupBean">
        insert into boss_project_group_tb (project_id,group_name,type,group_desc,create_time,update_time)
        VALUES (#{projectId},#{groupName},#{type},#{groupDesc},#{createTime},#{updateTime});
    </insert>


    <!--查询项目下的所有分组 -->
    <select id="getProjectGroup" resultMap="BaseResultMap">
        select * from boss_project_group_tb where 1=1
        <if test="projectId != 0">
          AND project_id= '${projectId}'
        </if>
        AND type = '${type}' ORDER BY create_time ASC
    </select>

    <!-- 删除分组 -->
    <delete id="deleteProjectGroup" parameterType="java.lang.Integer">
        delete from boss_project_group_tb where id=#{id}
    </delete>

    <!--查询单个分组 -->
    <select id="getProjectGroupById" resultMap="BaseResultMap">
        select * from boss_project_group_tb where 1=1 AND id=#{id}
    </select>
</mapper>